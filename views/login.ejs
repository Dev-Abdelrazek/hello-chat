<%- include("parts/header") %>
    <%- include("parts/nav") %>
        <div class="container text-center">
            <h3 class="mb-4">Login</h3>
            <% if(acountCreated) {%>
                <div class="alert alert-success w-50 d-inline-block">
                    Account created successfully, You can log in now
                </div>
                <% } %>
                    <form action="/login" method="POST">
                        <input type="email" name="email" placeholder="Email" required autofocus
                            class="form-control d-inline-block w-50 mb-2">
                        <% let error=validationErrors.find(err=> err.param === "email") %>
                            <% if(error) {%>
                                <div class="custom-alert custom-alert-danger d-inline-block w-50">
                                    <%= error.msg %>
                                </div>
                                <% } %>
                                    <input type="password" name="password" placeholder="Password" required minlength="6"
                                        class="form-control d-inline-block w-50 mb-2">
                                    <% error=validationErrors.find(err=> err.param === "password") %>
                                        <% if(error) {%>
                                            <div class="custom-alert custom-alert-danger d-inline-block w-50">
                                                <%= error.msg %>
                                            </div>
                                            <% } %>
                                                <input type="submit" value="Log In"
                                                    class="form-control d-inline-block w-50 mb-2 btn btn-primary">
                    </form>
                    <% if(loginError) {%>
                        <div class="custom-alert custom-alert-danger d-inline-block w-50">
                            <%= loginError %>
                        </div>
                        <% } %>
                            <div class="my-2">
                                Don't have account ? <a href="/signup"> Signup</a>
                                <div class="parent-login-line">
                                    <span class="login-line mt-2">or</span>
                                </div>
                                <a class="google-link my-3" href="/google/login">
                                    <div style="height:50px;width:240px;" class="abcRioButton abcRioButtonBlue">
                                        <div class="abcRioButtonContentWrapper">
                                            <div class="abcRioButtonIcon" style="padding:15px">
                                                <div style="width:18px;height:18px;"><svg width="18px" height="18px"
                                                        viewBox="0 0 48 48" class="abcRioButtonSvg">
                                                        <g>
                                                            <path fill="#EA4335"
                                                                d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z">
                                                            </path>
                                                            <path fill="#4285F4"
                                                                d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z">
                                                            </path>
                                                            <path fill="#FBBC05"
                                                                d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z">
                                                            </path>
                                                            <path fill="#34A853"
                                                                d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z">
                                                            </path>
                                                            <path fill="none" d="M0 0h48v48H0z"></path>
                                                        </g>
                                                    </svg></div>
                                            </div><span style="font-size:16px;line-height:48px;"
                                                class="abcRioButtonContents"><span>Sign in with
                                                    Google</span></span>
                                        </div>
                                    </div>
                                </a>
                            </div>
        </div>

        <%- include("parts/footer") %>